pipeline {
    agent any
    
    stages{
        stage('Build'){
            steps {
                sh 'mvn clean install'
            }
            post {
                success {
                    echo 'Build successful'
                }
            }
        }
        stage('Test'){
            steps {
                sh 'mvn test'
            }
            post {
                success {
                    echo 'Testing Done'
                }
            }
        }
    }
}